<%- include('../partials/header'); %>
    <div class="row">
        <h1 style="text-align: center">Add New Comment to <%= hotel.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/hotels/<%= hotel._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" required>
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" step="0.1" min="1" max="5" name="comment[rating]" placeholder="Rating" required>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/hotels">Go Back</a>
        </div>
    </div>
<%- include('../partials/footer'); %>

